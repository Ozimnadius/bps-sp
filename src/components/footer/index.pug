footer.footer
    .container
        .footer__grid
            .footer__col
                .footer__logo
                    a(href="/")
                        img(src="/images/content/logo.png" alt="lorem")
            .footer__col
                .footer__title Разделы
                .footer__items
                    each i in GLOBALS.nav
                        a(href=i.url).footer__item= i.title
            .footer__col
                .footer__title Контакты
                .footer__tel
                    a(href=GLOBALS.tel.href)= GLOBALS.tel.val
            .footer__col
                .footer__title Адрес
                .footer__addr!=GLOBALS.addr